<script>
    function removeNotification(id) {
        const notification = document.getElementById(id);
        if (notification) {
            notification.parentNode.removeChild(notification);
        }
    }

    function acceptNotification(id) {
        const notification = document.getElementById(id);
        if (notification) {
            notification.style = "background-color: green;";
        }
    }
</script>